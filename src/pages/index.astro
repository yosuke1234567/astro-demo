---
import Layout from "@/layouts/Layout.astro";

const links = [
    {
        href: "/pc",
        title: "PC",
    },
    {
        href: "/sp",
        title: "SP",
    },
];
---

<Layout title="Welcome to Astro.">
    <div class="container">
        <h1>Welcome to Astro.</h1>
        <ul class="href-list">
            {
                links.map((link) => (
                    <li>
                        <a href={link.href} class="card">
                            <h2>{link.title}</h2>
                            <p>Preview &quot;<code>pages/{link.title}.astro</code>&quot;</p>
                        </a>
                    </li>
                ))
            }
        </ul>
        <a href="https://px-to-vw.vercel.app/" target="_blank" class="docs-link">
            PX to VW Calculator &rarr;
        </a>
        <a href="https://docs.astro.build/" target="_blank" class="docs-link">
            Astro Documentation &rarr;
        </a>
    </div>
</Layout>

<style is:inline>
* {
    box-sizing: border-box;
}

body {
    margin: 0;
}

#main {
    font-family: "Inter", sans-serif;
    color: #333;
}

#main a {
    color: inherit;
    text-decoration: none;
}

#main .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 32px 16px;
    background-color: #f8f2ff;
    font-size: 1.25rem;
}

#main h1 {
    margin: 0;
    font-size: 2.5rem;
}

#main .href-list {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2em;
    padding: 2em 0;
    list-style: none;
}

@media screen and (max-width: 768px) {
    #main h1 {
        font-size: 2rem;
    }

    #main .href-list {
        flex-direction: column;
        gap: 1em;
        padding: 1em 0;
    }
}

#main .card {
    display: block;
    padding: 0.5em 2em 1em;
    border: 1px solid #ddd;
    border-radius: 0.4em;
    background-color: #fff;
    transition: border-color 0.2s, box-shadow 0.2s;
}

#main .card:hover {
    border-color: transparent;
    box-shadow: 0 0 0.5em #ddd;
}

#main .card p {
    font-size: 1rem;
    color: #555;
}

#main .docs-link {
    margin-top: 16px;
    color: #7c3aed;
}

#main .docs-link:hover {
    text-decoration: underline;
}
</style>

---
import About from "@/components/pc/About.astro";
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/pc/Hero.astro";
import Header from "@/components/pc/Header.astro";
import Slider from "@/components/pc/Slider.astro";

---

<Layout title="PC Layout">
    <Header />
    <Hero />
    <Slider />
    <About />
</Layout>

<style is:global lang="scss">
* {
    box-sizing: border-box;
}

body {
    margin: 0;
}

#main {
    font-family: "Lora", serif;
    color: #222;

    a {
        color: inherit;
        text-decoration: none;
    }
}
</style>